<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learn.mapper.UserMapper">
   <select id="querUserList" resultType="User">
    select * from [user]
   </select>

    <select id="querUserByName" resultType="User">
    select * from [user] where name=#{name}
   </select>

    <insert id="addUser" parameterType="User">
        insert into [user] (name,password,image),values(#{name},#{name},#{image})
    </insert>
    <update id="updateUser" parameterType="User">
        update [user] set name=#{name},password=#{password},image=#{image} where name=#{name}
    </update>
    <delete id="deleteUser" parameterType="String">
        delete from [user] where name=#{name}
    </delete>
</mapper>